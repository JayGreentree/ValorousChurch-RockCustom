{% if Page.DisplayChildPages and Page.Pages != empty %}
<div class="tw-bg-gray-800 tw-py-4">
    <div class="container">
        <section class="nav-sub tw-m-0 tw-text-center">
            <ul class="tw-mx-0 tw-my-8 md:tw-my-0 md:tw-flex md:tw-justify-center md:tw-flex-row tw-list-none tw-inline-block tw-text-left" style="font-size: 1.3em">
                {% for childPage in Page.Pages %}
                  <li class="tw-border-0 tw-px-8 tw-py-1">
                      <a href="{{ childPage.Url }}" class="tw-py-3 tw-border-l-2 md:tw-border-l-0 tw-pl-4 md:tw-pl-0 tw-border-c-primary hover:tw-text-white hover:tw-no-underline {% if childPage.Current %}tw-text-white tw-font-bold{% else %}tw-text-gray-300{% endif%}">{{ childPage.Title }}</a>
                  </li>
                {% endfor %}
            </ul>
        </section>
    </div>
</div>
{% endif %}
